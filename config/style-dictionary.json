{
  "source": ["tokens/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "frontend/src/design-system/",
      "files": [
        {
          "destination": "tokens.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "json": {
      "transformGroup": "js",
      "buildPath": "frontend/src/design-system/",
      "files": [
        {
          "destination": "tokens.json",
          "format": "json/nested"
        }
      ]
    },
    "dts": {
      "transformGroup": "js",
      "buildPath": "frontend/src/design-system/",
      "files": [
        {
          "destination": "tokens.d.ts",
          "format": "typescript/es6-declarations"
        }
      ]
    }
  }
}
