# Optimize npm for faster builds
audit=false
fund=false
progress=false
# Use faster registry if needed
# registry=https://registry.npmjs.org/
# Enable parallel downloading
maxsockets=20
# Skip optional dependencies that aren't needed
omit=optional
# Cache optimization (use prefer-online instead of deprecated cache-max)
prefer-online=true
# Enable lockfile optimizations
package-lock=true
# Reduce install time
install-strategy=shallow
# Disable automatic dependency resolution
prefer-dedupe=false
# Speed up installs
fetch-retries=2
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000