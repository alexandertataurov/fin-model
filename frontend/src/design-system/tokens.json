{
  "colors": {
    "primary": {
      "50": "hsl(210, 100%, 98%)",
      "500": "hsl(215, 91%, 65%)",
      "700": "hsl(215, 91%, 43%)"
    },
    "neutral": {
      "50": "hsl(0, 0%, 98%)",
      "900": "hsl(0, 0%, 9%)"
    },
    "success": { "500": "hsl(142, 71%, 45%)" },
    "warning": { "500": "hsl(48, 96%, 53%)" },
    "error": { "500": "hsl(0, 84%, 60%)" }
  },
  "typography": {
    "fontSizes": { "sm": "12px", "md": "14px", "lg": "16px" },
    "lineHeights": { "sm": "18px", "md": "20px", "lg": "24px" }
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 24
  },
  "borderRadius": { "sm": 4, "md": 6, "lg": 8 },
  "shadows": {
    "sm": "0 1px 2px rgba(0,0,0,0.05)",
    "md": "0 2px 8px rgba(0,0,0,0.10)"
  },
  "transitions": { "fast": "150ms", "normal": "200ms", "slow": "300ms" },
  "zIndex": { "base": 0, "dropdown": 1000, "modal": 1300, "toast": 1500 },
  "cssVariables": {
    ":root": {
      "--background": "#ffffff",
      "--foreground": "#0a0a0a",
      "--primary": "#030213",
      "--primary-foreground": "#ffffff"
    },
    ".dark": {
      "--background": "#0a0a0a",
      "--foreground": "#ffffff",
      "--primary": "#ffffff",
      "--primary-foreground": "#0a0a0a"
    }
  }
}
